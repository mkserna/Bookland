@{
    ViewData["Title"] = "Admin";
}
@model List<Bookland.Models.Books.Book>
<div class="row justify-content-around">
    <div class="col-5 text-center">

        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <img src="../assets/img/ElViento.jpg" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title pt-3">@item.Title</h5>
                                <p class="lead">@item.Author.AuthorName</p>
                                <p class="card-text lead fs-6">La vida es bella por la razón del
                                    corazon, esperando uno de los
                                    mejores resultados que se ven
                                    cada día</p>
                                <a type="button" class="btn btn-warning mt-2"><i class="bi bi-pencil"></i></a>
                                <a type="button" class="btn btn-danger mt-2"><i class="bi bi-trash3-fill"></i></a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No hay libros disponibles en este momento.</p>
                }
            </div>
        </div>
    </div>
</div>
